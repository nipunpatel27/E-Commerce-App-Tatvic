<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    android:layout_margin="15dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#D2F6FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_p_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cart_p_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="15dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="19sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="41dp"
                        android:layout_height="wrap_content"
                        android:text="Qty:"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cart_p_qty"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#333333"
                        android:layout_marginTop="17dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="21dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/dollar"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/cart_p_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/cart_add_qty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    />

                <ImageButton
                    android:id="@+id/cart_minus_qty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/minus"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="-50dp"
                    />

                <ImageButton
                    android:id="@+id/cart_delete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/trash"
                    android:layout_gravity="end"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="-50dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>